# https://editorconfig.org/
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4

[*.{yml,yaml,toml,json,jsonc,jsonl,js,ts}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{bat,cmd,ps1}]
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,txt,rst}]
insert_final_newline = true
trim_trailing_whitespace = false

[*.tsv]
indent_style = tab

[Makefile]
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[LICENSE]
insert_final_newline = false
trim_trailing_whitespace = true
